@model List<Blogy.EntityLayer.Concrete.Category>
@{
	Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
	<br /><br />
	<table class="table table-bordered">
		<tr>
			<th>#</th>
			<th>Kategori Adı</th>
			<th>Sil</th>
			<th>Güncelle</th>
			<th>Kategoriye Ait Bloglar</th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.CategoryId</td>
				<td>@item.CategoryName</td>
				<td><a href="#" class="btn btn-danger">Sil</a></td>
				<td><a href="#" class="btn btn-success">Güncelle</a></td>
				<td><a href="#" class="btn btn-dark">Kategoriye Ait Bloglar</a></td>
			</tr>
		}
	</table>
	<a href="#" class="btn btn-primary">Yeni Kategori Ekle</a>
</div>